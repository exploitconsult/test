<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_move_form_inherit_for_tf" model="ir.ui.view">
            <field name="name">timbre.account_move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tax_totals_json']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='tax_totals_json']" position="before">
                    <field name="amount_before_discount" attrs="{'invisible':[('amount_discount','==',0)]}"/>
                    <field name="amount_discount" attrs="{'invisible':[('amount_discount','==',0)]}"/>
                    <field name="amount_untaxed" string="Net H.T"/>
                </xpath>
                <xpath expr="//field[@name='tax_totals_json']" position="after">
                    <field name="amount_tax" string="TVA"/>
                    <field name="timbre"/>
                    <field name="amount_total" string="Total TTC"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>